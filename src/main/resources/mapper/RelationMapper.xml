<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ideality.coreflow.project.query.mapper.RelationMapper">

    <select id="selectRelation" resultType="com.ideality.coreflow.project.query.dto.prevTaskDTO">
        SELECT
               a.id
             , a.prev_work_id
             , b.name
             , a.next_work_id
             , c.name
          FROM relation a
          JOIN work b ON a.prev_work_id = b.id
          JOIN work c ON a.next_work_id = c.id
         WHERE
    </select>
</mapper>
