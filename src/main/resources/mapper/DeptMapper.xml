<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ideality.coreflow.project.query.mapper.DeptMapper">
    <select id="findNameById" resultType="string">
        SELECT name
          FROM dept
         WHERE id = #{id}
    </select>

    <select id="findDeptCodeByName" resultType="string">
        SELECT dept_code
        FROM dept
        WHERE name = #{deptName}
    </select>

    <!-- 부서명만 조회하는 SQL -->
    <select id="findAllDeptNames" resultType="string">
        SELECT name
        FROM dept
    </select>


</mapper>