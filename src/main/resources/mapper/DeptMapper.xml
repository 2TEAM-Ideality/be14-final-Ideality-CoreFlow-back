<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ideality.coreflow.project.query.mapper.DeptMapper">
    <resultMap id="DeptIdResultMap" type="com.ideality.coreflow.project.query.mapper.ResponseDeptIdDTO">
        <id property="deptId" column="id"/>
    </resultMap>

    <select id="findIdByName"  resultMap="DeptIdResultMap">
        SELECT
               id
          FROM dept
         WHERE name = #{deptName}
    </select>
</mapper>